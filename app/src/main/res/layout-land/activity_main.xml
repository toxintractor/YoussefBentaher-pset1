<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mocro.youssefbentaher_pset1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr Patato Head!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center" />



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/imageEyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eyes" />

        <ImageView
            android:id="@+id/imageHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hat" />



    </FrameLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/chhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="hatClicked"
                android:text="Hat" />

            <CheckBox
                android:id="@+id/chglasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glasses" />
            <CheckBox
                android:id="@+id/chears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ears" />
            <CheckBox
                android:id="@+id/cheyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyebrows" />

            <CheckBox
                android:id="@+id/cheyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eyesClicked"
                android:text="Eyes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/charms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms" />

            <CheckBox
                android:id="@+id/chnose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nose" />
            <CheckBox
                android:id="@+id/chmustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mustache" />
            <CheckBox
                android:id="@+id/chmouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mouth" />
            <CheckBox
                android:id="@+id/chshoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes" />

        </LinearLayout>

    </LinearLayout>






</LinearLayout>
